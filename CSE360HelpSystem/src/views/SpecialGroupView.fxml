<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SpecialGroupViewController" spacing="20" alignment="CENTER"
      prefWidth="800" prefHeight="800" style="-fx-padding: 20; -fx-background-color: #F0F0F0;">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Title Section -->
	<VBox alignment="CENTER" spacing="5">
	    <Label fx:id="groupNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
	    <Label text="Special Group Articles" style="-fx-font-size: 14px;"/>
	</VBox>

    <!-- Search Section -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Search Articles:"/>
        <TextField fx:id="searchField" promptText="Enter keywords..." prefWidth="300"/>
        <Button text="Search" onAction="#loadArticles"/>
    </HBox>

    <!-- Group Filter Section -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Filter by Groups:"/>
        <ComboBox fx:id="groupFilterComboBox" promptText="Select Groups"/>
        <Button text="Add Group" onAction="#addGroupToFilter"/>
        <Button text="Clear Groups" onAction="#clearGroupFilters"/>
    </HBox>
    <ListView fx:id="groupFilterListView" prefHeight="100"/>

    <!-- TableView for displaying Articles -->
    <TableView fx:id="articleTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
            <TableColumn fx:id="abstractColumn" text="Abstract" prefWidth="250"/>
            <TableColumn fx:id="authorsColumn" text="Authors" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Action Buttons Section -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="createButton" text="Create New Article" onAction="#goToCreateArticle"/>
        <Button text="Return To Homepage" onAction="#goHome"/>
    </HBox>

</VBox>