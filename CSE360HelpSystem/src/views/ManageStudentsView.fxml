<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controllers.ManageStudentsController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Manage Students" style="-fx-font-size: 24;"/>
    
    <!-- Invite Student Section -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="emailField" promptText="Enter student email" prefWidth="300"/>
        <Button fx:id="sendInviteButton" text="Invite Student" onAction="#handleInvite"/>
    </HBox>
    
    <!-- Student Table -->
    <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
            <TableColumn fx:id="preferredNameColumn" text="Preferred Name" prefWidth="150"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="deleteColumn" text="Delete" prefWidth="100"/>
        </columns>
    </TableView>
    
    <!-- Navigation Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="homeButton" text="Home" onAction="#goHome"/>
    </HBox>
    
</VBox>