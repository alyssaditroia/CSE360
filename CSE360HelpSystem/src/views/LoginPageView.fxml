<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginPageController" spacing="10" alignment="CENTER"
      minWidth="400" minHeight="300" prefWidth="600" prefHeight="400">
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
    
    <!-- Label for displaying error messages -->
    <Label fx:id="errorLabel" text=" " style="-fx-text-fill: red;"/>
     <Label fx:id="statusLabel" text=" " style="-fx-text-fill: green;"/>
</VBox>

