<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.SelectRolePageController" spacing="30" alignment="CENTER"
      prefWidth="800" prefHeight="800" style="-fx-padding: 30; -fx-background-color: #FFFFFF; -fx-font-family: 'Arial';">
    
    <!-- Title -->
    <Label text="CSE 360 Help System" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #8C1D40;" />
    <Label text="Select Your Role" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333333;" />
    
    <!-- Buttons -->
    <VBox spacing="15" alignment="CENTER">
        <Button fx:id="adminButton" text="Admin" onAction="#redirectToAdminHomepage" visible="false"
                style="-fx-padding: 10 30; -fx-font-size: 16; -fx-background-color: #8C1D40; -fx-text-fill: white; -fx-background-radius: 10;"/>
        
        <Button fx:id="instructorButton" text="Instructor" onAction="#redirectToInstructorHomepage" visible="false"
                style="-fx-padding: 10 30; -fx-font-size: 16; -fx-background-color: #8C1D40; -fx-text-fill: white; -fx-background-radius: 10;"/>
        
        <Button fx:id="studentButton" text="Student" onAction="#redirectToStudentHomepage" visible="false"
                style="-fx-padding: 10 30; -fx-font-size: 16; -fx-background-color: #8C1D40; -fx-text-fill: white; -fx-background-radius: 10;"/>
    </VBox>
    
    <!-- Back Button -->
    <Button fx:id="backButton" text="Back" onAction="#goBack"
            style="-fx-padding: 10 30; -fx-font-size: 16; -fx-background-color: #FFC627; -fx-text-fill: white; -fx-background-radius: 10;"/>
</VBox>
