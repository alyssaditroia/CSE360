<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AdminHomePageController"
      prefWidth="800" prefHeight="800" style="-fx-padding: 20; -fx-background-color: #F0F0F0;">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" 
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <!-- Title Label -->
            <Label fx:id="adminHomeTitle" text="Admin Home Page" 
                   style="-fx-font-size: 24; -fx-font-weight: bold;" />

            <!-- GridPane for Permissions and Email -->
            <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
                <!-- Label for Permissions -->
                <Label text="Select permissions for invitee" style="-fx-font-size: 14;" GridPane.columnSpan="2" />

                <!-- Checkboxes for Permissions -->
                <CheckBox fx:id="admin" text="Admin" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <CheckBox fx:id="student" text="Student" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <CheckBox fx:id="instructor" text="Instructor" GridPane.rowIndex="3" GridPane.columnIndex="0" />

                <!-- Label for Email Field -->
                <Label text="Enter invitee email" style="-fx-font-size: 14;" GridPane.rowIndex="4" GridPane.columnIndex="0" />

                <!-- Email for User to Invite with prefWidth set -->
                <TextField fx:id="emailField" promptText="User Email" prefWidth="300" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                <Button fx:id="sendInviteButton" text="Send Invite" onAction="#handleInvite" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            </GridPane>

            <!-- TableView for displaying invited users -->
            <TableView fx:id="userTable" prefHeight="300">
			    <columns>
			        <TableColumn fx:id="usernameColumn" text="Username" />
			        <TableColumn fx:id="preferrednameColumn" text="Preferred Name" />
			        <TableColumn fx:id="emailColumn" text="Email" />
			        <TableColumn fx:id="adminColumn" text="Admin" />
			        <TableColumn fx:id="studentColumn" text="Student" />
			        <TableColumn fx:id="instructorColumn" text="Instructor" />
			        <TableColumn fx:id="updatePermissionsColumn" text="Update User Permissions" />
			        <TableColumn fx:id="resetPasswordColumn" text="Reset User Password" />
			        <TableColumn fx:id="deleteColumn" text="Delete User" />
			    </columns>
			</TableView>

            <!-- Buttons for Actions  -->
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Button fx:id="logoutButton" text="Logout" onAction="#logout" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>



